// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_User            Int       @id @default(autoincrement())
  full_name          String
  image              String?
  role               Role
  status             status?
  default_Adress_lat Float?
  default_Adress_lng Float?
  default_time       String?
  booking            Booking[]
  key                Key?      @relation(fields: [key_id], references: [id_Key])
  key_id             Int?      @unique
}

model Key {
  id_Key   Int    @id @default(autoincrement())
  userName String
  email    String
  user     User?
}

model Booking {
  id_Booking    Int            @id @default(autoincrement())
  user_id       Int
  depart_Time   String
  depart_Date   String
  Adress_lnt    Float?
  Adress_lng    Float?
  bookedAt      DateTime?
  bus_id        Int
  bus           Bus            @relation(fields: [bus_id], references: [id_Bus])
  user          User           @relation(fields: [user_id], references: [id_User])
  bookingStatus BookingStatus?
}

model Bus {
  id_Bus       Int       @id @default(autoincrement())
  bus_Number   Int
  bus_Name     String
  id_Driver    Int
  bus_Capacity Int
  bus_Status   status
  booking      Booking[]
  duities      Duty[]
}

model TravelTimes {
  id   Int    @id @default(autoincrement())
  time String
}

model Duty {
  id_Duty     Int         @id @default(autoincrement())
  duty_Time   String
  duty_Date   String
  duty_Status DutyStatus?
  bus_id      Int
  bus         Bus         @relation(fields: [bus_id], references: [id_Bus])
}

enum status {
  inactive
  active
}

enum Role {
  staff
  student
  driver
}

enum BookingStatus {
  Pending
  Completed
  Missed
}

enum DutyStatus {
  Pending
  Scanning
  Driving
}
